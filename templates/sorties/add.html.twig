{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ page_name }}{% endblock %}

{% block body %}
    <div class="jumbotron mt-2">
        <h1 class="text-center display-4 lead">{{ page_name }}</h1>

            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">
                <div class="col">
                    {{ form_row(form.nom) }}
                    {{ form_row(form.datedebut) }}
                    {{ form_row(form.duree) }}
                    {{ form_row(form.datecloture) }}
                    {{ form_row(form.nbinscriptionsmax) }}
                    {{ form_row(form.descriptioninfos) }}
                </div>


            </div>
            <div class="row">
                <div class="col-4">
                    {{ form_row(form.lieu) }}
                </div>
                <div class="col-4">
                    <button id="btnAddLieu" type="button" class="btn btn-dark"><i class="fas fa-plus-circle"></i></button>
                </div>
            </div>



            {{ form_end(form) }}



        <div class="modal fade" id="modalLieux" tabindex="-1" role="dialog" aria-labelledby="modalLieux" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Nom lieux</label>
                                <input type="nom" class="form-control" id="nomLieux" aria-describedby="nomLieux" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Rue</label>
                                <input type="nom" class="form-control" id="nomLieux" aria-describedby="nomLieux" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Latitude</label>
                                <input type="nom" class="form-control" id="nomLieux" aria-describedby="nomLieux" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Longitude</label>
                                <input type="nom" class="form-control" id="nomLieux" aria-describedby="nomLieux" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="selectVilleLieux">Ville</label>
                                <select class="form-control" id="selectVilleLieux">
                                    {% for ville in listVilles %}
                                        <option>{{ ville.nomVille }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/sortiesadd.js') }}"></script>
{% endblock %}
